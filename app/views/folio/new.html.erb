<div class="page-header">
  <h1>Create a Folio</h1>
</div>

<form action="/folio" method="post">
  <div class="form-group">
    <label for="inputName">Folio Name</label>
    <input type="input" class="form-control" id="inputName" name="name" placeholder="Name">
  </div>
  <div class="form-group">
    <label for="inputDesc">Folio Description</label>
    <textarea rows="8" class="form-control" id="inputDesc" name="desc" placeholder="Description"></textarea>
  </div>
  <div class="form-group">
    <label for="inputTags">Folio Tags</label>
    <input type="input" class="form-control" id="inputName" name="name" placeholder="graphic design,photoshop">
  </div>
  <button type="submit" class="btn btn-primary btn-lg btn-block">Create</button>
</form>
