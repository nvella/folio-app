<div class="row">
  <div class="col-md-3"></div>
  <div class="col-md-6">
    <div class="page-header">
      <h1>Edit Caption</h1>
    </div>

    <%= form_for @caption do |f| %>
      <% if @caption.errors.any? %>
        <div class="alert alert-danger" role="alert">
          <p><b>Whoops.</b> Looks like there were some issues with your request</p>
          <ul>
            <% @caption.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <%= f.label :text %><br>
        <%= f.text_area :text, class: 'form-control', placeholder: 'Text', rows: 5 %>
      </div>

      <div class="form-group">
        <%= f.submit 'Save', class: 'btn btn-primary btn-lg btn-block' %>
      </div>
    <% end %>
  </div>
  <div class="col-md-3"></div>
</div>
