<div class="row">
  <div class="col-md-3"></div>
  <div class="col-md-6">
    <div class="page-header">
      <h1>Edit Image</h1>
    </div>

    <h4>Current Image</h4>
    <div class="well">
      <% if @image.image.file.nil? %>
        <p><b>No image here at the moment...</b> Why not upload one?</p>
      <% else %>
        <%= render 'image', image: @image %>
      <% end %>
    </div>

    <%= form_for @image do |f| %>
      <% if @image.errors.any? %>
        <div class="alert alert-danger" role="alert">
          <p><b>Whoops.</b> Looks like there were some issues with your request</p>
          <ul>
            <% @image.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <%= f.label :image %><br>
        <%= f.file_field :image, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.submit 'Save', class: 'btn btn-primary btn-lg btn-block' %>
      </div>
    <% end %>
  </div>
  <div class="col-md-3"></div>
</div>
