<div class="page-header">
  <h1><%= @folio.name %></h1>
</div>

<div class="row">
  <div class="col-md-12 folio-button-bar">
    <a class="btn btn-primary" href="">Open Folio</a>
    <% if current_user == @folio.user %>
      <a class="btn btn-default">Edit</a>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <h5>Description</h5>
    <p class="lead">
      <%= @folio.description %>
    </p>
  </div>
</div>

<div class="row">
  <div class="col-md-6">
    <h5>Tags</h5>
    <% @folio.tags.split(',').map {|t| t.strip}.each do |tag| %>
    <div class="tag"><%= tag %></div>
    <% end %>
  </div>
  <div class="col-md-6">
    <h5>About the Author</h5>
    <img src="<%= @folio.user.image %>" alt="User display photo" class="img-rounded folio-user-image">
    <h3><%= @folio.user.name %></h3>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <hr>
    <h5>Comments</h5>
    <p>Comment section goes here</p>
  </div>
</div>
