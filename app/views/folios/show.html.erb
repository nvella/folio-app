<div class="page-header">
  <h1><%= @folio.name %></h1>
</div>

<div class="row">
  <div class="col-md-12 folio-button-bar">
    <% if @first_folio_page.nil? && current_user != @folio.user %>
      This folio has no pages.
    <% elsif @first_folio_page.nil? %>
      <%= link_to 'Create First Page', new_folio_page_path, class: 'btn btn-success' %>
    <% else %>
      <%= link_to 'Open Folio', @first_folio_page, class: 'btn btn-primary' %>
    <% end %>
    <% if current_user == @folio.user %>
      <%= link_to 'Edit Info', edit_folio_path, class: 'btn btn-default' %>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <h5>Description</h5>
    <p class="lead">
      <%= @folio.description %>
    </p>
  </div>
</div>

<div class="row">
  <div class="col-md-6">
    <h5>Tags</h5>
    <% @folio.tags.split(',').map {|t| t.strip}.each do |tag| %>
    <div class="tag"><%= tag %></div>
    <% end %>
  </div>
  <div class="col-md-6">
    <h5>About the Author</h5>
    <img src="<%= @folio.user.image %>" alt="User display photo" class="img-rounded folio-user-image">
    <h3><%= @folio.user.name %></h3>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <hr>
    <h5>Comments</h5>
    <p>Comment section goes here</p>
  </div>
</div>
