<div class="page-header">
  <h1>Create a Folio</h1>
</div>

<%= form_for :folio, url: folios_path do |f| %>
  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name, class: 'form-control', placeholder: 'Name' %>
  </div>

  <div class="form-group">
    <%= f.label :description %><br>
    <%= f.text_area :description, class: 'form-control', placeholder: 'Description' %>
  </div>

  <div class="form-group">
    <%= f.label :tags %><br>
    <%= f.text_field :tags, class: 'form-control', placeholder: 'graphic design, photoshop' %>
  </div>

  <div class="form-group">
    <%= f.submit class: 'btn btn-primary btn-lg btn-block', value: 'Create' %>
  </div>
<% end %>
